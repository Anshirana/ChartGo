<html>

<head>
    <title>User Registration</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script type="text/JavaScript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
    <script src="javascripts/signup.js"></script>

</head>

<body>
    <div class="card">
        <% include ./partials/messages %>
        <div class="card-header">
            <h1>Registration</h1>
            <p>Create your account</p>
        </div>
        <div class="card-body">
            <form class="needs-validation" method="POST" action="/signup" id="signup-form" novalidate>
                <div class="form-group row">
                    <div class="col">
                        <label for="fname">First Name</label>
                        <input class="form-control" type="text" id="fname" name="fname" pattern="^[a-zA-Z]*$"
                            value="<%= typeof fname != 'undefined' ? fname : '' %>" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Must have 1 letter</div>
                    </div>
                    <div class="col">
                        <label for="lname">Last Name</label>
                        <input class="form-control" type="text" id="lname" name="lname" pattern="^[a-zA-Z]*$"
                            value="<%= typeof lname != 'undefined' ? lname : '' %>" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Must have 1 letter</div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter email" id="email"
                        pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$"
                        value="<%= typeof email != 'undefined' ? email : '' %>" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Enter a valid email.</div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Enter password"
                        pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,}$" id="password"
                        value="<%= typeof password!= 'undefined' ? password : '' %>" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Must have 1 uppecase and lowercase letter, Minimum 8 Characters and 1
                        special Character</div>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="password2" class="form-control" placeholder="Enter password"
                        pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,}$" id="password2"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                    <div class="invalid-feedback"></div>
                </div>
                <button class="btn btn-primary btn-block mt-5 mb-3" type="submit">Register</button>
            </form>
            <p>
                Have an account?
                <a href="/signin">
                    <button type="button" class="btn btn-sm">Sign In</button>
                </a>
            </p>
        </div>
    </div>
</body>

</html>